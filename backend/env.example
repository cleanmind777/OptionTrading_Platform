# Application Configuration
DEBUG=false
PROJECT_NAME="Option Trading Platform"
VERSION="1.0.0"

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trading_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]

# Redis Configuration (for caching and session storage)
REDIS_URL=redis://localhost:6379

# Cookie Configuration
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=localhost

# Session Configuration
SESSION_EXPIRE_MINUTES=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Trading API Configuration (for broker integration)
TRADING_API_KEY=your-trading-api-key
TRADING_API_SECRET=your-trading-api-secret
TRADING_API_URL=https://api.tradingplatform.com 